<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newColor"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/TextColor"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="60sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="120sp"
        android:autofillHints=""
        android:backgroundTint="@color/purple_200"
        android:ems="10"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textColor="@color/TextColor"
        android:textColorHint="@color/TextColorHint"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_field"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/main_btn"
        android:textColor="#000000"
        tools:ignore="SpeakableTextPresentCheck"></Button>

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btn"
        android:layout_marginTop="50sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="25sp" />
</RelativeLayout>
